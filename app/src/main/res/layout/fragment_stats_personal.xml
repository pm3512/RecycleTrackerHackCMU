<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ap="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#F6F6F6"
    >

    <Button
        android:id="@+id/switch_to_global"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.15"
        android:backgroundTint="@android:color/holo_green_dark"
        android:fontFamily="sans-serif"
        android:text="View global statistics"
        android:textSize="20dp"></Button>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.07"
        android:background="@drawable/back"
        android:fontFamily="sans-serif"
        android:paddingBottom="2dp"
        android:text="  Total trash recycled: 420 lbs"
        android:textAlignment="textStart"
        android:textSize="16dp"></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.07"
        android:background="@drawable/back"
        android:fontFamily="sans-serif"
        android:paddingBottom="2dp"
        android:text="  Most often recycled: RedBull can (20oz)"
        android:textAlignment="textStart"
        android:textSize="16dp">

    </TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="2dp"
        android:layout_weight="0.07"
        android:background="@drawable/back"
        android:fontFamily="sans-serif"
        android:text="  Recycling percentile: 94.6%"
        android:textAlignment="textStart"
        android:textSize="16dp"></TextView>
    <com.androidplot.xy.XYPlot
        android:id="@+id/plot"
        android:theme="@style/APDefacto.Light"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.6"
        ap:title="Your Progress"
        ap:rangeTitle="Trash Recycled (lbs)"
        ap:lineLabels="left|bottom"
        ap:lineLabelRotationBottom="-45"
        ap:backgroundColor="#FFF"
        ap:graphBackgroundColor="#FFF"
        ap:borderColor="#FFF"
        />
</LinearLayout>